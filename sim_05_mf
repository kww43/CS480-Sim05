CC = gcc
DEBUG = -g
CFLAGS = -Wall -std=c99 -c $(DEBUG)
LFLAGS = -Wall -std=c99 $(DEBUG)

sim05 : Main.o UploadFile.o ProcessManager.o Thread.o ProcessQueue.o
	$(CC) $(LFLAGS) Main.o UploadFile.o  ProcessManager.o Thread.o ProcessQueue.o -lpthread -o sim05

Main.o : Main.c Main.h UploadFile.h ProcessManager.h
	$(CC) $(CFLAGS) Main.c

UploadFile.o : UploadFile.c UploadFile.h
	$(CC) $(CFLAGS) UploadFile.c

ProcessManager.o : ProcessManager.c ProcessManager.h
	$(CC) $(CFLAGS) ProcessManager.c

Thread.o : Thread.c
	$(CC) $(CFLAGS) Thread.c

ProcessQueue.o : ProcessQueue.c ProcessQueue.h
	$(CC) $(CFLAGS) ProcessQueue.c

clean:
	\rm *.o sim05
